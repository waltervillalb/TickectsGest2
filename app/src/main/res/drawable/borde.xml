<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- El color del borde -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/color1" /> <!-- Cambia esto por el color de tu borde -->
        </shape>
    </item>
    <!-- La imagen con un margen, que funciona como el borde -->
